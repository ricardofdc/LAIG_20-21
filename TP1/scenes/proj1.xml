<lsf>
    <initials>
        <reference length="2" />
        <!-- axis length; "0" means no axis displayed -->
        <root id="root" />
        <!-- identifier of root node of the scene graph; this node -->
        <!-- must be defined in one of the following NODE declarations -->
    </initials>
    <views default="defaultCamera">
        <!-- at least one of the following type of cameras must be declared -->
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <ortho id="demoOrtho" near="0.2" far="100" left="-0.2" right="0.2" top="0.2" bottom="-0.2">
            <from x="5" y="0" z="10" />
            <to x="5" y="0" z="0" />
            <up x="0" y="1" z="0" /><!-- optional, default 0,1,0 -->
        </ortho>
    </views>

    <illumination>
        <ambient r="0.1" g="0.1" b="0.1" a="1.0" />           <!-- global ambient -->
        <background r="0.529" g="0.808" b="0.922" a="1.0" />     <!-- background color -->
    </illumination>


    <lights>
        <!-- NOTE: this block "light" must be repeated as necessary with different "id". At least one light should be present, and a maximum of eight lights is accepted. -->
        <light id="light1">            <!-- light identifier -->
            <enable value="1" />
            <!-- enable/disable -->
            <position x="10" y="12" z="9.5" w="1.0" /><!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0" g="0" b="0" a="1.0" />                   <!-- ambient component -->
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />             <!-- diffuse component -->
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />            <!-- specular component -->
        </light>
    </lights>


    <textures>
        <!-- NOTE: this block "TEXTURE" must be repeated as necessary with different "id" -->
        <texture id="oceanTexture" path="./scenes/images/ocean.jpg" />
    </textures>


    <materials>
        <!-- NOTE: the "MATERIAL" block may be repeated as required. Each defined material
         requires a distinct "id". At least one material should be present. -->
        <material id="defaultMaterial">
            <shininess value="1" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="oceanBlueMaterial">
          <shininess value="1"/>
          <specular r="0.0" g="0.0" b="0.0" a="1"/>
          <diffuse r="0.0" g="0.412" b="0.58" a="1"/>
          <ambient r="0.0" g="0.0" b="0.0" a="1"/>
          <emissive r="0.0" g="0.0" b="0.0" a="1"/>
        </material>

        <material id="sandMaterial">
            <shininess value="0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.761" g="0.698" b="0.502" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <nodes>
        <node id="root">
            <material id="defaultMaterial" />
            <texture id="null" />

            <transformations>
            </transformations>

            <descendants>
                <noderef id="ocean" />
                <noderef id="island" />
            </descendants>
        </node>

        <node id="ocean">
            <material id="null" />
            <texture id="oceanTexture">
                <amplification afs="60.0" aft="60.0" /><!-- for primitives = dx/afs, dy/aft -->
            </texture>

            <transformations>
                <rotation axis="xx" angle="-90" />
            </transformations>

            <descendants>
                <leaf type="rectangle" x1="-30" y1="-30" x2="30" y2="30" />
            </descendants>
        </node>

        <node id="island">
            <material id="null" />
            <texture id="null" />

            <transformations>
            </transformations>

            <descendants>
              <noderef id="islandBase" />
              <noderef id="someTrees" />
            </descendants>
        </node>

        <node id="islandBase">
            <material id="null" />
            <texture id="null" />

            <transformations>
                <rotation axis="xx" angle="-90" />
            </transformations>

            <descendants>
                <LEAF id="sand" type="cylinder" bottomRadius="20" topRadius="15" height="0.5" slices="40" stacks="1" />
            </descendants>
        </node>

        <node id="someTrees">
            <material id="null" />
            <texture id="null" />

            <transformations>
            </transformations>

            <descendants>
              <noderef id="tree1" />
              <noderef id="tree2" />
              <noderef id="tree3" />
              <noderef id="tree4" />
              <noderef id="tree5" />
              <noderef id="tree6" />
              <noderef id="tree7" />
              <noderef id="tree8" />
              <noderef id="tree9" />
              <noderef id="tree10" />
            </descendants>
        </node>


    </nodes>
</lsf>
